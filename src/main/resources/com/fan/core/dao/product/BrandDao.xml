<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.fan.core.dao.product.BrandDao">

    <!-- resultMap  -->
    <resultMap type="Brand" id="brand">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="img_url" property="imgUrl"/>
        <result column="sort" property="sort"/>
        <result column="is_display" property="isDisplay"/>
    </resultMap>

    <!--查询品牌 所有 迭代1-->
    <select id="getBrandList" resultMap="brand">
        select id,name,description,img_url,web_site,sort,is_display
        from bbs_brand
        where is_display = 1
        order by id desc
    </select>

    <!--带有条件参数的品牌查询 迭代2-->
    <select id="getBrandByCondition" parameterType="Brand" resultMap="brand">
        select *
        from bbs_brand
        where
        <if test="name != null">
            name=#{name}
        </if>
        <if test="isDisplay != null">
            and is_display=#{isDisplay}
        </if>
        order by id desc
    </select>


    <!--带有分页且查询条件的品牌查询 迭代3-->
    <select id="getBrandListWithPage" parameterType="Brand" resultMap="brand">
        select *
        from bbs_brand
        where
        <if test="name != null">
            name=#{name}
        </if>
        <if test="isDisplay != null">
            and is_display=#{isDisplay}
        </if>
        order by id desc
        limit 0,5
    </select>


    <select id="getBrandCount" parameterType="Brand" resultType="java.lang.Integer">
        select count(1)
        from bbs_brand
        where is_display = ${isDisplay}
    </select>


    <!--  添加品牌数据  -->
    <insert id="addBrand" parameterType="Brand">
        insert into bbs_brand
        <trim prefix="(" suffix=")">
            name ,
            description,
            img_url,
            sort,
            is_display
        </trim>
        VALUES
        <trim prefix="(" suffix=")">
            #{name},
            #{description},
            #{imgUrl},
            #{sort},
            #{isDisplay}
        </trim>
    </insert>

</mapper>